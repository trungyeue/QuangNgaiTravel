<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="bỏ qua"
        android:gravity="right"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="QuangNgai Travel"
        android:textColor="#FF0909"
        android:textStyle="bold"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_marginTop="60dp"/>
    <LinearLayout
        android:layout_width="match_parent"
       android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardCornerRadius="8dp">
        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:padding="3dp"
            android:textSize="15dp"
            android:textColor="#FBFBFB"
            android:background="#3F51B5"
            android:drawableLeft="@drawable/facebook"
            android:text="Đăng nhập bằng Facebook"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="8dp">
        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:padding="3dp"
            android:textSize="15dp"
            android:textColor="#FBFBFB"
            android:background="#ED2C6D"
            android:drawableLeft="@drawable/quangngai"
            android:text="Đăng nhập với QuangNgai Travel"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/vien"
            app:cardCornerRadius="8dp">
            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:padding="3dp"
                android:textSize="15dp"
                android:textColor="#FB109D"
                android:background="@drawable/vien"
                android:text="Tạo tài khoản"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


